<%- include('../partials/header.ejs') %>
<body>
    <div>
        <h2>Add a Restaurant</h2>
        <form action="/restaurants" method="POST">
            <fieldset>
                <label>Name: <input type="text" name="name" placeholder="Name"></label>
                <label>Cuisine: <input type="text" name="cuisine" placeholder="Cuisine"></label>
                <label>PriceRange: <input type="number" name="priceRange" placeholder="Price Range"></label>
                <label>Website: <input type="text" name="restaurantLink" placeholder="Website URL"></label>
                <label>Dishes: <input type="text" name="dishes" placeholder="Dishes"></label>
                <label>Drinks: <input type="text" name="drinks" placeholder="Drinks"></label>
                <label>Notes: <input type="text" name="notes" placeholder="Anthing Else?"></label>
                <br>
                <input type="submit" value="Add">
            </fieldset>
        </form>

    </div>

</body>
</html>